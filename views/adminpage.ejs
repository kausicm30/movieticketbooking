<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marksheet</title>
    <link rel="stylesheet" href="/public/css/adminpage.css">
    <style>
        .class0{
    position: sticky;
    top: 0%;
}
.class1{
    padding-top: 5px;
    background-color: green;
    color: white;
    font-weight: 700;
    font-size: 20px;
    font-family: 'Courier New', Courier, monospace;
}
.class1 img{
    height:30px;
    width:50px;
}
.class1 span{
    position: relative;
    bottom: 10px;
}
.class2 nav a:hover{
    text-decoration: overline;
}
.class2{
    background-color:white;
    font-weight: 700;
    font-size: 20px;
    font-family: 'Courier New', Courier, monospace;
}
.class2 img{
    padding-left: 5%;
    height:40px;
    width: 150px;
}
.class2 nav a{
    color: green;
    text-decoration: none;
    padding-left: 15px;
    padding-right: 15px;
}
    </style>
</head>
<body>
    <div class="class0">
        <div class="class1">
            <marquee behavior="scroll" direction="left">
            <img src="/public/images/cinema.jpg" alt="image">
            <span>Welcome to MTB movie ticket booking App</span>
            <img src="/public/images/cinema.jpg" alt="image">
            </marquee>
        </div>
        <div class="class2">
            <img src="/public/images/logo.png" alt="image">
            <nav style="float: right; position: relative; top: 10px; padding-right:10%;">
                <a href="/home" >Home</a>
                <a href="#Movies"style="text-decoration: overline;">Movies</a>
                <a href="/logout"style="text-decoration: overline;">Logout</a>
            </nav>
        </div>
    </div>
    <div class="container">
        <div class="sub-container">
            <center><h2>MTB Movie ticket Booking Details</h2></center>
            <table>
                <tr>
                    <th >S. No</th>
                    <th >EmailId</th>
                    <th >Movie Name</th>
                    <th >Movie Time</th>
                    <th >TotalNoOfTickets</th>
                    <th >Seat Numbers</th>
                    <th >Total Amount</th>
                </tr>
                <% if(data.length != 0){%>
                <%var i =1;%>
                <%data.forEach((row)=>{%>
                <tr>
                    <td><%=i%></td>
                    <td><%=row.email%></td>
                    <td><%=row.moviename%></td>
                    <td><%=row.movietime%></td>
                    <td><%=row.nooftickets%></td>
                    <td><%=row.seatnumbers%></td>
                    <td><%=row.totalamount%></td>
                </tr>
                <%i++; });%>
                <% } else {%>
                    <tr>
                        <td colspan="7" class="c">No data Found</td>
                    </tr>
                    <%}%>
            </table>
        </div>
    </div>
</body>
</html>